{{#each messages }}
    <div class="errors">{{this}}</div>
{{/each}}


<form method="POST" action='/contact-us'>
<div>
    <label for="firstName">First Name</label>
    <input type="text" id="firstName" name="fName" value={{this.firstName}}> 
</div>

<div>
    <label for="lastName">Last Name</label>
    <input type="text" id="lastName" name="lName" value={{this.lastName}}> 
</div>

<div>
    <label for="message">Message</label>
    <textarea type="text" id="message" name="message"  >{{this.message}}</textarea> 
</div>

<div>
     <input type="submit" value="Contact-Us">
</div>

</form>